{
  "name": "minifarm-api",
  "version": "1.0.0",
  "description": "APIs for minifarm",
  "main": "app.js",
  "scripts": {
    "help": "sls --help",
    "build": "sls webpack",
    "start": "sls offline --stage local",
    "test": "sls invoke test --stage local",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:stage": "sls deplloy --stage:stage",
    "deploy:prod": "sls deploy --stage:prod",
    "clean": "rimraf .webpack .serverless",
    "deep-clean": "rimraf node_modules package-lock.json .webpack .serverless && npm install",
    "//build": "babel ./src --out-dir dist",
    "//1": "TODO: npm run xxx does't work well due the process.env.stage cannot be set to local",
    "//start:node": "nodemon src/app.js --exec babel-node --presets @babel/preset-env",
    "//test": "jest --watchAll",
    "//npm-cover": "npm run test -- --coverage",
    "//npm-debug": "nodemon --inspect ./src/app.js --exec babel-node --presets @babel/preset-env",
    "//dev": "npm run prettier-watch & npm run server",
    "//2": "npm run dev works but has error",
    "//server": "nodemon ./src/app.js --exec babel-node --presets @babel/preset-env",
    "lint": "eslint --fix ./src ./test --color && prettier --write \"src/**/*.js\"",
    "lint-check": "eslint --print-config ./src | eslint-config-prettier-check",
    "prettier-watch": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "babel-run": "babel-node ./src/app.js"
  },
  "keywords": [],
  "author": "Yanfeng Tian",
  "license": "apache-2.0",
  "dependencies": {
    "ajv": "^7.0.3",
    "ajv-formats": "^1.5.1",
    "boom": "^7.3.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-combine-routers": "^4.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "massive": "^6.6.2",
    "pg": "^8.5.1",
    "pg-monitor": "^1.4.1",
    "pg-promise": "^10.9.1",
    "serverless-http": "^2.6.1",
    "superagent": "^6.1.0",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime-corejs2": "^7.0.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.3.0",
    "babel-plugin-source-map-support": "^2.1.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semistandard": "^16.0.0",
    "serverless-jest-plugin": "^0.3.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "standard": "^16.0.3",
    "supertest": "^6.1.1",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
